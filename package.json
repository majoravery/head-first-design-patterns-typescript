{
  "name": "head-first-design-patterns-typescript",
  "version": "1.0.0",
  "devDependencies": {
    "@types/node": "^14.14.33",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.22.0",
    "prettier": "2.2.1",
    "typescript": "^4.2.3"
  },
  "scripts": {
    "lint": "npx eslint . --ext .ts"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "newline-before-return": 2,
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  }
}
